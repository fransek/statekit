{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2019",
    "module": "CommonJS",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "outDir": "dist",
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "docs", "**/*.test.ts", "**/*.test.tsx"]
}
